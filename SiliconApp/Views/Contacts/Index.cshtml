@using SiliconApp.Controllers
@model IEnumerable<SiliconApp.Models.Contact>

@{
    ViewData["Title"] = "Index";

    List<Breadcrumb>  Breadcrumbs = new()
    {
        new Breadcrumb("Home", nameof(HomeController.Index), "Home", true),
        new Breadcrumb("Contact", nameof(ContactsController.Index), "Contact", false),

    };
}

<h1>Index</h1>
<partial name="_Breadcrumbs" model="@Breadcrumbs" />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="text-break" style="max-width:200px;">
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>

                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
